# Backend Environment Variables
# Copy this file to .env and fill in the values

# Database URL (PostgreSQL for production, SQLite for local development)
# For local development, leave this empty to use SQLite
# For Render.com, this will be automatically set from the database
DATABASE_URL=

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# Frontend URL for CORS (your deployed frontend URL)
FRONTEND_URL=https://your-frontend.onrender.com

# Redis Configuration (optional - for caching and Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (optional - for email features)
MAILHOG_SERVER=localhost
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025
